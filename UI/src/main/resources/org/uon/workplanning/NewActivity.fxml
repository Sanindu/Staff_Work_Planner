<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uon.workplanning.ActivityController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="typeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Activity:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="activityField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <HBox spacing="10">
    <Button text="Save" onAction="#handleCreate" />
    <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
