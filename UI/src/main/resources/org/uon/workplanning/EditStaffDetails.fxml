<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uon.workplanning.EditStaffDetailsController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Edit Staff Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:"/>
        <TextField fx:id="fullNameField" GridPane.columnIndex="1"/>
        <Label text="Email:" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Contact Number:" GridPane.rowIndex="2"/>
        <TextField fx:id="contactNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Address:" GridPane.rowIndex="3"/>
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Password:" GridPane.rowIndex="4"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Employment Type:" GridPane.rowIndex="5"/>
        <ComboBox fx:id="employmentTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Subject Area:" GridPane.rowIndex="6"/>
        <TextField fx:id="subjectAreaField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Line Manager:" GridPane.rowIndex="7"/>
        <TextField fx:id="lineManagerField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        <Label text="Role:" GridPane.rowIndex="8"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>
    <HBox spacing="10">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
